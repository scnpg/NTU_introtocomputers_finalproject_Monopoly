    // 買不買得起 (Can Afford)
    method boolean canAfford(int amount) {
        if (~(balance < amount)) {
            return true;
        }
        return false;
    }

    // 買土地 (Buy Regular Property)
    method void buyProperty(PropertyTile p, int price, Board board) {
        if (canAfford(price)) {
            do pay(price, board);
            do p.setOwner(this);
        }
        return;
    }
    
