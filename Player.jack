        // 蓋房子 (Build House)
    method void buildHouse(PropertyTile p, Board board) {

        // Must own the property
        if (~(p.getOwner() = this)) {
            return;
        }

        // Must afford house
        if (~canAfford(p.getHouseCost())) {
                return;
        }

         // Pay and build
        do pay(p.getHouseCost(), board);
        do p.addHouse();   
        let numHouses=numHouses+1;
        return;
    }


